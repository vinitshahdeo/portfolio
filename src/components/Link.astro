---
import { Icon } from "astro-icon/components";
interface Props {
  text: string;
  href: string;
  icon: string;
  external?: boolean;
  noAnchor?: boolean;
}

const { text, href, external, noAnchor, icon } = Astro.props;
---

{
  !noAnchor ? (
    <a
      href={href}
      target={external ? "_blank" : "_self"}
      class="flex items-center gap-2 opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity"
    >
      <Icon name={icon} width={20} height={20} />

      <span>{text}</span>
    </a>
  ) : (
    <div class="flex items-center gap-2 opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity">
      <Icon name={icon} width={20} height={20} />

      <span>{text}</span>
    </div>
  )
}
