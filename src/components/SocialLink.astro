---
import { Icon } from "astro-icon/components";
import type { SocialLink } from "../types/config";

type Props = SocialLink;

const { title, url, icon, external } = Astro.props;
---

<a
  href={url}
  class="flex items-center gap-2 opacity-60 group-hover:opacity-30 hover:!opacity-60 transition-opacity"
  target={external ? "_blank" : "_self"}
>
  <Icon name={icon} width={20} height={20} />
  <div>
    <p>{title}</p>
  </div>
</a>
