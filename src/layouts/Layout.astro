---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import {
  navBarLinks,
  identity,
  measurementId,
  googleSiteVerification,
} from "../config";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import type { SEOInfo } from "../types/config";
import "@styles/base.css";

interface Props {
  seo: SEOInfo;
}

const { seo } = Astro.props;
const ogImageUrl = seo.image;
---

<script>
  const linkMenuButton = document.getElementById(
    "link-menu-button",
  ) as HTMLButtonElement;
  const linkMenu = document.getElementById("link-menu") as HTMLDivElement;
  const openIndicator = document.getElementById(
    "open-indicator",
  ) as HTMLSpanElement;

  linkMenuButton.addEventListener("click", () => {
    if (linkMenu.classList.contains("opacity-0")) {
      linkMenu.classList.remove("pointer-events-none");
      linkMenu.classList.remove("opacity-0");
      linkMenu.classList.add("pointer-events-auto");
      openIndicator.innerText = "Ã—";
    } else {
      linkMenu.classList.add("pointer-events-none");
      linkMenu.classList.add("opacity-0");
      linkMenu.classList.remove("pointer-events-auto");
      openIndicator.innerText = "+";
    }
  });

  document.addEventListener("click", (event) => {
    const isLinkMenuButtonClicked =
      event.target === linkMenuButton ||
      linkMenuButton.contains(event.target as Node);
    const isLinkMenuClicked =
      event.target === linkMenu || linkMenu.contains(event.target as Node);

    if (!isLinkMenuButtonClicked && !isLinkMenuClicked) {
      linkMenu.classList.add("pointer-events-none");
      linkMenu.classList.add("opacity-0");
      linkMenu.classList.remove("pointer-events-auto");
      openIndicator.innerText = "+";
    }
  });
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&family=Fira+Code:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <meta name="generator" content={Astro.generator} />
    <title>{seo.title}</title>

    <!-- HTML Meta Tags -->
    <meta name="description" content={seo.description} />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:image" content={ogImageUrl} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={seo.url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:image" content={ogImageUrl} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={seo.domain} />
    <meta property="twitter:url" content={seo.url} />
    <meta name="twitter:title" content={seo.title} />
    <meta name="twitter:description" content={seo.description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <meta name="google-site-verification" content={googleSiteVerification} />
    <!-- Google Analytics -->
    <GoogleAnalytics measurementId={measurementId} />
    <!-- Google Analytics -->
  </head>
  <body>
    <header class="border-b border-[var(--color-terminal-green)] border-opacity-20 bg-black bg-opacity-50 backdrop-blur-md sticky top-0 z-50">
      <div
        class="px-6 py-4 max-w-3xl mx-auto flex items-center justify-between gap-4"
      >
        <a href="/" class="flex items-center gap-2 glitch-effect flex-shrink-0">
          <Image
            src={identity.logo}
            alt={"Logo"}
            width={45}
            height={45}
            loading="lazy"
            decoding="async"
            quality={100}
            densities={[1.5, 2]}
            class="w-[45px] h-[45px] object-cover rounded-md border-2 border-[var(--color-terminal-green)]"
            style="box-shadow: 0 0 10px var(--color-glow);"
          />
          <span class="text-[var(--color-terminal-green)] font-mono text-sm hidden sm:inline">~/portfolio</span>
        </a>
        
        <nav class="flex-1 flex items-center justify-end navbar">
          <ul class="hidden sm:flex sm:items-center sm:gap-1">
            {
              navBarLinks.map((link) => {
                const isActive =
                  Astro.url.pathname === link.url ||
                  (link.url !== "/" && Astro.url.pathname.startsWith(link.url));
                return (
                  <li>
                    <a
                      class={`group relative px-3 py-2 text-sm transition-all duration-300 font-mono inline-block ${
                        isActive
                          ? "active-nav-link"
                          : "opacity-70 hover:opacity-100 hover:text-[var(--color-terminal-green)]"
                      }`}
                      href={link.url}
                      target={link.external ? "_blank" : "_self"}
                    >
                      <span class="relative z-10">{isActive ? `[${link.title}]` : link.title}</span>
                      {!isActive && (
                        <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-[var(--color-terminal-green)] group-hover:w-full transition-all duration-300" style="box-shadow: 0 0 5px var(--color-glow);" />
                      )}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          
          <!-- Mobile menu -->
          <div class="relative sm:hidden">
            <button
              id="link-menu-button"
              class="relative font-mono text-sm opacity-70 hover:opacity-100 px-3 py-2 rounded border border-[var(--color-terminal-green)] hover:bg-[var(--color-terminal-green)] hover:bg-opacity-10 transition-all duration-200"
              aria-label="Toggle navigation menu"
            >
              <span>MENU</span>
              <span id="open-indicator" class="ml-2 text-[var(--color-terminal-cyan)]"
                >+</span
              >
            </button>
            <div
              id="link-menu"
              class="absolute top-full mt-2 right-0 bg-black border-2 border-[var(--color-terminal-green)] rounded w-48 transition-all ease-in-out duration-200 opacity-0 z-50 pointer-events-none"
              style="box-shadow: 0 0 15px var(--color-glow);"
            >
              <ul class="py-2">
                {
                  navBarLinks.map((link, index) => {
                    const isActive =
                      Astro.url.pathname === link.url ||
                      (link.url !== "/" &&
                        Astro.url.pathname.startsWith(link.url));
                    return (
                      <li>
                        <a
                          class={`block px-4 py-3 text-sm font-mono transition-all duration-200 ${
                            isActive
                              ? "text-[var(--color-terminal-green)] font-bold bg-[var(--color-terminal-green)] bg-opacity-10 border-r-2 border-[var(--color-terminal-green)]"
                              : "opacity-80 hover:opacity-100 hover:bg-[var(--color-terminal-green)] hover:bg-opacity-10 hover:text-[var(--color-terminal-green)]"
                          }`}
                          href={link.url}
                          target={link.external ? "_blank" : "_self"}
                        >
                          {isActive ? '> ' : '  '}{link.title}
                        </a>
                      </li>
                    );
                  })
                }
              </ul>
            </div>
          </div>
        </nav>
        
        <a
          href=`mailto:${identity.email}`
          class="block p-2 opacity-60 hover:opacity-100 transition-all text-[var(--color-terminal-cyan)] hover:text-[var(--color-terminal-green)] flex-shrink-0"
          aria-label="Email"
          style="filter: drop-shadow(0 0 5px var(--color-terminal-cyan));"
        >
          <Icon name="mdi:email" width={22} height={22} />
        </a>
      </div>
    </header>
    <main class="mb-32">
      <slot />
    </main>
    <footer></footer>
  </body>
</html>
