---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import {
  navBarLinks,
  identity,
  measurementId,
  googleSiteVerification,
} from "../config";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import type { SEOInfo } from "../types/config";
import "@styles/base.css";

interface Props {
  seo: SEOInfo;
}

const { seo } = Astro.props;
const ogImageUrl = seo.image;
---

<script>
  const linkMenuButton = document.getElementById(
    "link-menu-button",
  ) as HTMLButtonElement;
  const linkMenu = document.getElementById("link-menu") as HTMLDivElement;
  const openIndicator = document.getElementById(
    "open-indicator",
  ) as HTMLSpanElement;

  linkMenuButton.addEventListener("click", () => {
    const isOpen = linkMenu.classList.contains("opacity-0");
    if (isOpen) {
      linkMenu.classList.remove("pointer-events-none");
      linkMenu.classList.remove("opacity-0");
      linkMenu.classList.add("pointer-events-auto");
      openIndicator.innerText = "Ã—";
      linkMenuButton.setAttribute("aria-expanded", "true");
    } else {
      linkMenu.classList.add("pointer-events-none");
      linkMenu.classList.add("opacity-0");
      linkMenu.classList.remove("pointer-events-auto");
      openIndicator.innerText = "+";
      linkMenuButton.setAttribute("aria-expanded", "false");
    }
  });

  document.addEventListener("click", (event) => {
    const isLinkMenuButtonClicked =
      event.target === linkMenuButton ||
      linkMenuButton.contains(event.target as Node);
    const isLinkMenuClicked =
      event.target === linkMenu || linkMenu.contains(event.target as Node);

    if (!isLinkMenuButtonClicked && !isLinkMenuClicked) {
      linkMenu.classList.add("pointer-events-none");
      linkMenu.classList.add("opacity-0");
      linkMenu.classList.remove("pointer-events-auto");
      openIndicator.innerText = "+";
      linkMenuButton.setAttribute("aria-expanded", "false");
    }
  });
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={seo.url} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://buttons.github.io" />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600&family=Kanit:wght@500;600&family=KoHo:wght@500;600&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{seo.title}</title>

    <!-- HTML Meta Tags -->
    <meta name="description" content={seo.description} />

    <!-- Open Graph / Facebook Meta Tags -->
    <meta property="og:url" content={seo.url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:image" content={ogImageUrl} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={seo.domain} />
    <meta property="twitter:url" content={seo.url} />
    <meta name="twitter:title" content={seo.title} />
    <meta name="twitter:description" content={seo.description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <meta name="google-site-verification" content={googleSiteVerification} />
    <!-- Google Analytics -->
    <GoogleAnalytics measurementId={measurementId} />
    <!-- Google Analytics -->
  </head>
  <body>
    <header>
      <div
        class="px-6 py-6 max-w-2xl mx-auto flex items-center justify-between"
      >
        <a href="/">
          <Image
            src={identity.logo}
            alt={"Logo"}
            width={50}
            height={50}
            loading="eager"
            decoding="async"
            quality={100}
            densities={[1.5, 2]}
            class="w-[50px] h-[50px] object-cover"
          />
        </a>
        <nav class="navbar">
          <ul class="hidden sm:flex sm:items-center sm:gap-0">
            {
              navBarLinks.map((link) => {
                const isActive =
                  Astro.url.pathname === link.url ||
                  (link.url !== "/" && Astro.url.pathname.startsWith(link.url));
                return (
                  <li>
                    <a
                      class={`block px-3 py-2 text-sm rounded transition-colors duration-150 ${
                        isActive
                          ? "text-[#ffe895]"
                          : "text-[#c9c9c9]/60 hover:text-[#e0e0e0] hover:bg-white/5"
                      }`}
                      href={link.url}
                      target={link.external ? "_blank" : "_self"}
                    >
                      {link.title}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <!-- Mobile menu -->
          <div class="relative sm:hidden">
            <button
              id="link-menu-button"
              class="flex items-center px-3 py-2 text-sm text-[#c9c9c9]/60 hover:text-[#e0e0e0] rounded transition-colors duration-150"
              aria-label="Toggle navigation menu"
              aria-expanded="false"
              aria-controls="link-menu"
            >
              <span>Menu</span>
              <span id="open-indicator" class="ml-1.5 text-[#ffe895]">+</span>
            </button>
            <div
              id="link-menu"
              class="absolute top-full mt-2 right-0 bg-[#1a1a1a] border border-[#3a3a3a] rounded-lg w-48 transition-all ease-in-out duration-200 opacity-0 z-50 pointer-events-none backdrop-blur-md"
            >
              <ul class="py-2">
                {
                  navBarLinks.map((link, index) => {
                    const isActive =
                      Astro.url.pathname === link.url ||
                      (link.url !== "/" &&
                        Astro.url.pathname.startsWith(link.url));
                    return (
                      <li>
                        <a
                          class={`block px-4 py-3 text-sm transition-all duration-200 ${
                            isActive
                              ? "text-[#ffe895] font-medium bg-[#ffe895]/10 border-r-2 border-[#ffe895]"
                              : "opacity-80 hover:opacity-100 hover:bg-[#2a2a2a]/50 hover:text-[#e0e0e0]"
                          }`}
                          href={link.url}
                          target={link.external ? "_blank" : "_self"}
                        >
                          {link.title}
                        </a>
                      </li>
                    );
                  })
                }
              </ul>
            </div>
          </div>
        </nav>
        <div class="flex items-center gap-2">
          <a
            href="https://www.google.com/search?q=Who+is+Vinit+Shahdeo&udm=50"
            target="_blank"
            rel="noopener noreferrer"
            class="ask-ai-cta group flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-[#ffe895] bg-[#1a1a1a] border border-[#ffe895]/50 rounded-full hover:border-[#ffe895] hover:bg-[#ffe895]/15 hover:shadow-[0_0_20px_rgba(255,232,149,0.35)] hover:scale-105 active:scale-100 transition-all duration-200 ease-out"
            aria-label="Ask AI about Vinit Shahdeo"
          >
            <Icon
              name="mdi:creation"
              width={14}
              height={14}
              class="transition-transform duration-200 group-hover:rotate-12"
            />
            <span>Ask AI</span>
          </a>
          <a
            href=`mailto:${identity.email}`
            class="block p-2 text-[#c9c9c9]/50 hover:text-[#e0e0e0] transition-colors duration-150"
            aria-label="Email"
          >
            <Icon name="mdi:email" width={20} height={20} />
          </a>
        </div>
      </div>
    </header>
    <main class="mb-32">
      <slot />
    </main>
    <footer></footer>
    <!-- Non-critical third-party scripts loaded at end -->
    <script async src="https://buttons.github.io/buttons.js"></script>
  </body>
</html>
