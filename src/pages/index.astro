---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { homePageContent, identity } from "../config";
import SocialLink from "../components/SocialLink.astro";
import Link from "../components/Link.astro";
import { Icon } from "astro-icon/components";
---

<Layout seo={homePageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="text-3xl mb-1">{identity.name}</h1>
    <p class="opacity-60 mb-10 subtitle">
      {homePageContent.role}<span
        class="lazy-badge inline-flex items-center bg-[#2a2a2a] text-[#ffe895] text-xs font-semibold ml-2 px-2.5 py-0.5 rounded-full border border-[#3a3a3a]"
        ><span
          class="inline-block w-2 h-2 rounded-full bg-[#00abda] mr-1.5 pulse-dot"
        ></span>
        Hiring
      </span>
    </p>
    <div class="flex flex-row flex-wrap gap-6 mb-8">
      <Image
        src="/img/vinitshahdeo-home.png"
        alt={identity.name}
        width={100}
        height={100}
        loading="lazy"
        decoding="async"
        quality={100}
        densities={[1.5, 2]}
        class="rounded-lg border border-[#3a3a3a] border-2 border-opacity-80"
      />
      <div class="group flex flex-col justify-center gap-2 w-fit social-bar">
        {
          homePageContent.homeSocialLinks.map((link) => (
            <SocialLink
              title={link.title}
              url={link.url}
              icon={link.icon}
              external={link.external}
            />
          ))
        }
      </div>
    </div>

    <p class="max-w-md mb-8">
      <a
        class="github-button"
        href="https://github.com/vinitshahdeo"
        data-color-scheme="no-preference: dark_dimmed; light: light; dark: dark_dimmed;"
        data-size="large"
        data-show-count="true"
        aria-label="Follow @vinitshahdeo on GitHub">Follow @vinitshahdeo</a
      >
      <br /><br />
      Software Engineer leading engineering efforts at <a
        class="gradient-link"
        href="https://zzazz.com/"
        target="_blank">zzazz</a
      >, building the world's first large pricing model (LPM) — turning any
      content into a valuable, tradable asset.
      <br /><br />
      From SaaS to FinTech to now AI, it’s been a rewarding journey—honored to be
      a 3x <a
        class="gradient-link"
        href="https://stars.github.com/profiles/vinitshahdeo/"
        target="_blank">GitHub Star</a
      >
      from India and a maintainer for Google Summer Of Code(<strong>GSoC</strong
      >), nurturing open-source innovation at <a
        class="underline-hover"
        target="_blank"
        href="https://github.com/postmanlabs"
        >Postman<a></a>.
        <br /><br />
        Passionate about building event-driven architectures, designing AI-powered
        platforms, and scaling microservices with <strong>Node.js</strong> and <strong
          >Go</strong
        >. Beyond code, you’ll find me chasing shuttlecocks, sipping tea, and
        listening to poetry.
        <br /><br />
        <span class="navbar"
          >In a nutshell, 🏸 + 🍵 + 👨‍💻 = <a
            class="gradient-link glowing-animation"
            href="/about">@vinitshahdeo</a
          ></span
        >
      </a>
      <div class="flex items-center gap-4 group w-fit social-bar">
        {
          homePageContent.links.map((link) => (
            <Link
              text={link.title}
              href={link.url}
              external={link.external}
              icon={link.icon}
            />
          ))
        }
      </div>
    </p>
    <marquee
      behavior="scroll"
      direction="left"
      scrollamount="6"
      class="fixed bottom-0 left-0 w-full text-xs font-mono text-[#ffe895] font-semibold bg-transparent z-50 hidden sm:block"
      style="background: transparent;"
    >
      ✨ Experience my interactive CLI portfolio! Just open your terminal and
      run <span class="font-bold">npx vinitshahdeo</span>
    </marquee>
  </section>

